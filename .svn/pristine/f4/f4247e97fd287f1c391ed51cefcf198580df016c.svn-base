package ez_phone.dao;

import java.sql.*;
import java.util.ArrayList;
import java.util.List;

import ez_phone.dao.*;
import ez_phone.dto.*;

public class ProductDAO extends JdbcDAO {
	private static ProductDAO _dao;
	
	private ProductDAO() {
		// TODO Auto-generated constructor stub
	}
	
	static {
		_dao=new ProductDAO();
	}
	
	public static ProductDAO getDAO() {
		return _dao;
	}
	
	public List<ProductDTO> selectGalaxyList() {
		Connection con=null;
		PreparedStatement pstmt=null;
		ResultSet rs=null;
		List<ProductDTO> productList=new ArrayList<ProductDTO>();
		try {
			con=getConnection();
			
			String sql="select distinct p_image,p_name,p_price from product where p_code like '%gallaxy%'";
			pstmt=con.prepareStatement(sql);
			
			rs=pstmt.executeQuery();
			
			while(rs.next()) {
				ProductDTO product=new ProductDTO();
				product.setPimage(rs.getString("p_image"));
				product.setPname(rs.getString("p_name"));
				product.setPprice(rs.getString("p_price"));
				productList.add(product);
			}
		} catch (SQLException e) {
			System.out.println("[에러]selectGalaxyList 메소드의 SQL 오류 = "+e.getMessage());
		} finally {
			close(con, pstmt, rs);
		}
		return productList;
	}
	
