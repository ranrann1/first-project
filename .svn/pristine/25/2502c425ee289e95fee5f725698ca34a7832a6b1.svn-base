@charset "UTF-8";

#header_top{width:100%;height:50px;background:black;position:relative;z-index:1001;}
#header_top ul {padding:10px 0;text-align:right;}
#header_top li {display:inline-block;vertical-align:middle;position:relative;margin-left:30px;}
#header_top li:last-child {margin-right:0;}
#header_top li a {display:block;font-size:15px;font-weight:300;line-height:30px;color:white;transform:skew(-0.1deg);}

body{
	min-height:100vh;
	display:flex;
	flex-direction:column;
}
#footer{
	height: 120px;
	border: 1px solid blue;
	background-color : gray;
	text-align:center;
	font-size: 1.2e;
	margin-top:auto;
}
#content{
	text-align:center;
	font-size : 35px;
}
a{
	text-decoration-line: none;	
}
#manager_content{
	text-align:left;
}
